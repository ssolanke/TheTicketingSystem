@{
    ViewData["Title"] = "All Clients";
}
@using TicketingSystem.Models.ClientsViewModels
@using System.Collections.Generic
@model IEnumerable<ClientDetails>


@foreach (var client in Model)
{
    <div class="row">
        <div class="col s12 m6">
            <div class="card grey darken-1 stickey-action hoverable">
                <div class="card-content white-text activator">
                    <span class="card-title">@client.Client.FirstName @client.Client.LastName</span>
                    <p>@client.Client.Company</p><br>
                </div>
                <div class="card-action">
                    <a asp-action="AddTicket" asp-route-id="@client.Client.ClientId">Add Ticket</a>
                    <a asp-action="Open" asp-route-id="@client.Client.ClientId">Open</a>
                </div>
            </div>
        </div>
    </div>
}
